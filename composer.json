{
    "name": "tiagomichaelsousa/slack-client",
    "description": "A slack sdk for php",
    "keywords": ["php", "slack","sdk", "php", "package"],
    "license": "MIT",
    "authors": [
        {
            "name": "Tiago Sousa",
            "email": "tiagomichaelsousa@gmail.com"
        }
    ],
    "require": {
        "php": "^8.1.0",
        "nesbot/carbon": "^2.67",
        "nyholm/psr7": "^1.8",
        "php-http/discovery": "^1.18.1",
        "php-http/multipart-stream-builder": "^1.3.0",
        "psr/http-client": "^1.0.2",
        "psr/http-client-implementation": "^1.0.1",
        "psr/http-factory-implementation": "*",
        "psr/http-message": "^1.1.0|^2.0.0",
        "symfony/http-client": "^6.2"
    },
    "require-dev": {
        "guzzlehttp/guzzle": "^7.6.1",
        "guzzlehttp/psr7": "^2.5.0",
        "laravel/pint": "^1.10.0",
        "nunomaduro/collision": "^7.5.2",
        "pestphp/pest": "^2.6.1",
        "pestphp/pest-plugin-arch": "^2.1.2",
        "pestphp/pest-plugin-mock": "^2.0.0",
        "phpstan/phpstan": "^1.10.15",
        "rector/rector": "^1.0.0",
        "symfony/var-dumper": "^6.2.10"
    },
    "autoload": {
        "psr-4": {
            "Slack\\": "src/"
        },
         "files": [
            "src/Slack.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "config": {
        "sort-packages": true,
        "preferred-install": "dist",
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "php-http/discovery": true
        }
    },
    "scripts": {
        "refacto": "rector",
        "lint": "pint",
        "test:refacto": "rector --dry-run",
        "test:lint": "pint --test",
        "test:types": "phpstan analyse --ansi",
        "test:unit": "pest --colors=always --compact",
        "test": [
            "@test:refacto",
            "@test:lint",
            "@test:types",
            "@test:unit"
        ]
    }
}
